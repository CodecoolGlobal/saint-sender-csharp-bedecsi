<Window x:Class="SaintSender.DesktopUI.Views.LoginScreen"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:SaintSender.DesktopUI.Views"
        mc:Ignorable="d"
        Title="LoginScreen" Height="450" Width="380" FontSize="14" Background="#93A3B1">
    <Border Background="#7C898B" CornerRadius="20" Margin="25">
        <StackPanel Margin="20">
            <Label Content="Login" Foreground="White" FontSize="30" FontWeight="Bold" HorizontalAlignment="Center"/>
            <Separator Margin="15" Background="White"></Separator>
            <Label Content="Username" Foreground="White" FontSize="25" Margin="30 0"/>
            <TextBox x:Name="txtUsername" Background="#93A3B1" Foreground="White" FontSize="20" Margin="30 10"/>
            <Label Content="Password" Foreground="White" FontSize="25" Margin=" 30 0"/>
            <PasswordBox x:Name="txtPassword" Background="#93A3B1" Foreground="White" FontSize="20" Margin="30 10"/>
            <Button x:Name="btnSubmit" Content="Submit"  Background="#93A3B1" Foreground="White" FontSize="20" Margin="80 10"/>
        </StackPanel>
    </Border>
</Window>
